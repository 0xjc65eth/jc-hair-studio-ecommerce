{
  "framework": "nextjs",
  "regions": ["gru1", "iad1"],
  "installCommand": "npm ci --prefer-offline --no-audit --ignore-scripts",
  "buildCommand": "SKIP_TYPE_CHECK=true SKIP_LINT=true npm run build:vercel",
  "outputDirectory": ".next",
  "env": {
    "SKIP_TYPE_CHECK": "true",
    "SKIP_LINT": "true",
    "NODE_ENV": "production",
    "CI": "true",
    "DISABLE_ESLINT_PLUGIN": "true",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "build": {
    "env": {
      "SKIP_TYPE_CHECK": "true",
      "SKIP_LINT": "true",
      "NODE_ENV": "production",
      "CI": "true",
      "DISABLE_ESLINT_PLUGIN": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "VERCEL": "1",
      "VERCEL_ENV": "production",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "app/api/webhooks/**/*.ts": {
      "maxDuration": 25,
      "memory": 256
    },
    "app/api/admin/**/*.ts": {
      "maxDuration": 20,
      "memory": 256
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/admin/dashboard",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "crons": [],
  "cleanUrls": true,
  "trailingSlash": false
}