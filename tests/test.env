# Test Environment Variables for JC Hair Studio's 62
# Copy this to .env.test or configure your test runner

# Base URLs
TEST_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/jc-hair-studio-test
DATABASE_URL=mongodb://localhost:27017/jc-hair-studio-test

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=test-secret-key-for-testing-only

# Test credentials (use test/mock accounts)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
TWITTER_CLIENT_ID=test-twitter-client-id
TWITTER_CLIENT_SECRET=test-twitter-client-secret

# SendGrid (use test API key or mock)
SENDGRID_API_KEY=SG.test-key-for-testing
FROM_EMAIL=test@jchairstudios62.xyz
SUPPORT_EMAIL=test-support@jchairstudios62.xyz

# Payment (use test/sandbox keys)
STRIPE_SECRET_KEY=sk_test_test_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_test_key
PAYPAL_CLIENT_ID=test-paypal-client-id
PAYPAL_CLIENT_SECRET=test-paypal-client-secret

# Other test configurations
NODE_ENV=test
SKIP_TYPE_CHECK=true

# Test flags
TEST_HEADLESS=true
TEST_TIMEOUT=30000
TEST_SKIP_E2E=false