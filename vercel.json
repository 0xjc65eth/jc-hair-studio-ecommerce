  "env": {
    "CI": "false",
    "SKIP_TYPE_CHECK": "true",
    "SKIP_LINT": "true",
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max-old-space-size=2048"
  },
  "build": {
    "env": {
      "CI": "false",
      "SKIP_TYPE_CHECK": "true",
      "SKIP_LINT": "true",
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=2048"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  }
}